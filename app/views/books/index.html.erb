<h2>User info</h2>
<%= image_tag @user.get_image %>
<p>name <%= @user.name %>
<p>introduction <%= @user.introduction %></p>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Opinion</h5>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>

<% @books.each do |book| %>
  <div>
    <%= image_tag book.user.get_image %>
    <p>Title <%= book.title %></p>
    <p>Opinion <%= book.body %></p>
  </div>
<% end %>

