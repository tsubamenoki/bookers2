<h2>Editing Book</h2>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id: "inputTitle", placeholder: "タイトル" %>
  <label for="inputOpinion">Opinion</label>
  <%= f.text_area :body, placeholder: "内容" %>
  <%= f.submit "Update Book" %>
<% end %>