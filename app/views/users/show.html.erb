<div class="container">
<div>
  <%= flash[:notice] %>
</div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/showlist',user: @user, booknew: @booknew %>
    </div>
    <div class="offset-md-1 col-md-8">
      <h2>Books</h2>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>